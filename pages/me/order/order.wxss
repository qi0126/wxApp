page {
  background: #f5f5f5;
}

.tab {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-left: 50rpx;
  line-height: 84rpx;
  border-top: 1px solid #efefef;
  white-space: nowrap;
  background: #fff
}

.tab > view {
  padding-right: 50rpx;
  background: #fff;
}

.tab > view.active {
  color: #c09e57;
}

.list {
  width: 750rpx;
  overflow: hidden;
}

.item {
  box-sizing: border-box;
  margin-top: 24rpx;
  min-height: 336rpx;
  padding: 0 38rpx;
  background: #fff;
}

.item .top {
  padding-top: 38rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #e4e4e4;
}

.ttop {
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e4e4e4;
}

.tt-shopname {
  color: #c09e57;
}

/* 多个 */

.top-imgs {
  display: flex;
  align-items: center;
  white-space: nowrap;
}

.top-imgs-item {
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}



.bl-total {
  color: #999;
  margin-right: 20rpx;
}

.item .b-left > view text {
  margin-left: 20rpx;
}

.item .bottom {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
}

.bottom .b-left {
  padding-right: 10rpx;
  font-size: 24rpx;
}

.item .bottom > view {
  display: flex;
  align-items: center;
}

.b-status {
  display: flex;
  align-items: center;
}

.b-status .bs-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 18rpx;
  background: rgba(41, 204, 65, 1);
  box-shadow: 0px 2px 3px 0px rgba(109, 136, 236, 0.5);
}

.b-status > text {
  margin-left: 18rpx;
  font-size: 26rpx;
  color: #c09e57;
}

.b-btn > view {
  padding: 6rpx 36rpx;
  color: #c09e57;
  border: 1px solid #000;
}

.b-btn > view:active {
  opacity: 0.7;
}

/* 单个 */

.oneTop {
  display: flex;
}

.oneTop-img {
  display: flex;
  align-items: center;
  width: 220rpx;
  height: 220rpx;
  margin-right: 60rpx;
  overflow: hidden
}

.t-right {
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.t-right .r-tit {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.t-right .r-exted {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.r-exted .re-left {
  display: inline-flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.re-left > text {
  margin-right: 14rpx;
}

.r-exted .re-right {
  margin-left: 40rpx;
}

.t-right .r-price {
  padding-top: 30rpx;
  font-size: 28rpx;
}
