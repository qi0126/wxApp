.wrap {
  transition: transform 0s ease;
}

.wrap .wul, .wrap .cul, .wrap .nul, .wrap .tul {
  position: relative;
  list-style: none;
}

.wrap .wul .li, .wrap .cul .li, .wrap .nul .li, .wrap .tul .li {
  padding-top: 10px;
  width: 2px;
  height: 6px;
  position: absolute;
  color: #71758f;
}

.rotate .wrap .li > text {
  display: block;
  position: relative;
  width: 100rpx;  
  text-align: center;
  transform: translate(-50%, 0)
}

.wrap .wul {
  width: 1008rpx;
  height: 1008rpx;
}

.wrap .wul .li {
  left: 504rpx;
  -webkit-transform-origin: center 504rpx;
}

.wrap .cul {
  width: 830rpx;
  height: 830rpx;
}

.wrap .cul .li {
  left: 415rpx;
  -webkit-transform-origin: center 415rpx;
}

.wrap .nul {
  width: 662rpx;
  height: 662rpx;
}

.wrap .nul .li {
  left: 331rpx;
  -webkit-transform-origin: center 331rpx;
}

.wrap .tul {
  width: 490rpx;
  height: 490rpx;
}

.wrap .tul .li {
  left: 245rpx;
  -webkit-transform-origin: center 245rpx;
}

.inrotate {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 546rpx;
  z-index: 1;
}

/* 刻度 */
