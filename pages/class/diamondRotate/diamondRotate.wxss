}

.r-color {
  margin: 0 auto;
  position: absolute;
  bottom: -415rpx;
  left: -1000rpx;
  right: -1000rpx;
  width: 830rpx;
  height: 830rpx;
  border-radius: 830rpx;
  box-shadow: 0 0 18px rgba(25, 54, 118, 0.2);
  z-index: 2;
}

.r-neatness {
  margin: 0 auto;
  position: absolute;
  bottom: -378rpx;
  left: -1000rpx;
  right: -1000rpx;
  width: 662rpx;
  height: 662rpx;
  border-radius: 662rpx;
  box-shadow: 0 0 18px rgba(25, 54, 118, 0.2);
  z-index: 3;
}

.r-cut {
  margin: 0 auto;
  position: absolute;
  bottom: -332rpx;
  left: -1000rpx;
