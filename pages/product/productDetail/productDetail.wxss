page {
  background: #fff;
  padding-bottom: 120rpx;
}

.topIcon {
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  width: 100%;
  position: fixed;
  padding-top: 20rpx;
  padding-right: 30rpx;
  top: 0;
  z-index: 1
}

.topIcon > .topi-box {
  position: relative;
  width: 54rpx;
}

.topIcon > .topi-box image {
  width: 54rpx;
  height: 54rpx; 
}

.topIcon .topi-num {
  position: absolute;
  right: -14rpx;
  top: -8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #fff;
  background: #D19210;
  border-radius: 36rpx;
}

.swiperWrap {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 31rpx;
  flex-direction: column;
  position: relative;
}

swiper {
  /* border: 1px solid red; */
  width: 600rpx;
  height: 600rpx;
}

swiper image {
  width: 600rpx;
  height: 600rpx;
}

.prodDes {
  height: 43rpx;
  margin-top: 89rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 43rpx;
  margin-bottom: 41rpx;
}

.proPrice {
  font-size: 42rpx;
  font-weight: normal;
  color: rgba(0, 0, 0, 1);
  line-height: 59rpx;
  margin-bottom: 16rpx;
}

.proSize {
  font-size: 22rpx;
  font-weight: 300;
  color: #c4a56a;
  line-height: 30rpx;
}

.footer {
  height: 100rpx;
  width: 750rpx;
  /* border: 1px solid red; */
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #474747;
  color: #c09e57;
  justify-content: space-around;
  align-items: center;
  font-weight: 400;
  font-size: 30rpx;
  z-index: 2;
}

.footer .line {
  color: #979797;
}

/* 商品描述 */

.goodsWrap {
  padding-left: 48rpx;
  padding-right: 51rpx;
  margin-top: 103rpx;
  margin-bottom: 100rpx;
}

.goodsTitle {
  font-size: 26rpx;
  font-weight: 300;
  color: rgba(0, 0, 0, 1);
}

.goodsWrap .row {
  margin-top: 15rpx;
  display: flex;
}

.goodsWrap .row .col-1 {
  width: 130rpx;
  font-size: 26rpx;
  font-weight: 300;
  color: rgba(0, 0, 0, 1);
  margin-right: 6rpx;
}

.goodsWrap .row .col-2 {
  font-size: 26rpx;
  font-weight: 300;
  color: rgba(102, 102, 102, 1);
}

.goodsCaption {
  margin-top: 71rpx;
  display: flex;
}

.goodsCaption .line {
  margin-right: 6rpx;
  border-left: 4px solid #c09e57;
}

.goodsCaption .text {
  width: 117rpx;
  height: 33rpx;
  background-color: #c09e57;
  font-size: 24rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(51, 51, 51, 1);
  line-height: 33rpx;
  text-align: center;
}

.goodsWrap .textDes {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 300;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.goodsWrap .pictureDes {
  margin-top: 43rpx;
  /* height: 300px; */
}

/* 轮播指示点样式 */

/*用来包裹所有的小圆点  */

.dots {
  width: 156rpx;
  height: 36rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 320rpx;
  top: 641rpx;
}

/*未选中时的小圆点样式 */

.dot {
  width: 17rpx;
  height: 17rpx;
  border-radius: 50%;
  margin-right: 26rpx;
  background-color: #ededed;
}

/*选中以后的小圆点样式  */

.active {
  width: 17rpx;
  height: 17rpx;
  background-color: #29cc41;
}

/* 设计师样式 */

.des {
  display: flex;
  margin: 20rpx;
  margin-bottom: 40rpx;
  padding: 18rpx 44rpx;
  border-radius: 20rpx;
  border: 1px solid #eee;
}

.def-left > image {
  margin-right: 48rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  /* background: red; */
}

.def-right {
  padding: 20rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.def-right > .dr-tit {
  margin-bottom: 18rpx;
  font-size: 36rpx;
  color: #912b2b;
  font-family: KhmerMN;
}

.def-right > .dr-info {
  display: flex;
  justify-content: space-between;
}

.dr-info .dri-right {
  font-size: 24rpx;
  color: #c09e57;
}

.row-series {
  flex: 1;
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.row-series .box-ser {
  padding: 4rpx 8rpx;
  color: #c09e57;
  border: 1px solid #c09e57;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-top: -10rpx;
}

