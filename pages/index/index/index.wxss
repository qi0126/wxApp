page {
  background: #fff;
}

.bgWrap {
  width: 750rpx;
  height: 880rpx;
  background: rgba(96, 22, 125, 1) linear-gradient(45deg, rgba(28, 30, 29, 1) 0%, rgba(33, 62, 57, 1) 100%);
  position: relative;
}

.bgImg {
  width: 750rpx;
  height: 880rpx;
  display: block;
}

.bgImg > image {
  width: 750rpx;
}

.bgWrap .textCenter {
  position: absolute;
  top: 246rpx;
  left: 0;
  color: #fff;
  width: 750rpx;
  height: 220rpx;
}

.bgWrap .textCenter .storeName {
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: 12rpx;
  text-align: center;
}

.bgWrap .textCenter .shopText {
  letter-spacing: 2rpx;
  font-weight: 500;
  font-size: 38rpx;
  text-align: center;
  margin-top: 4rpx;
  margin-bottom: 36rpx;
}

.bgWrap .textCenter .shop {
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: 300;
  text-align: center;
  color: #c3a25f;
}

.bgWrap .textCenter .shop image {
  width: 34rpx;
  height: 34rpx;
  margin-left: 18rpx;
  vertical-align: middle;
}

.bgWrap .textCenter .imgFilter {
  width: 750rpx;
  height: 108rpx;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.4;
}

.bgWrap .textCenter image {
  width: 239rpx;
  height: 60rpx;
}

.search {
  display: flex;
  justify-content: center;
  position: relative;
}

.search-box {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 672rpx;
  height: 64rpx;
  margin-top: 39rpx;
  margin-bottom: 33rpx;
  background-color: #eee;
}

.searchInput {
  color: #C1C1C1;
  padding: 0 10rpx;
  padding-left: 20rpx;
}

.search-img {
  width: 28rpx;
  height: 28rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #c1c1c1;
}

.shopIntro {
  width: 750rpx;
  /* height:923px; */
  background: rgba(96, 22, 125, 1) linear-gradient(45deg, rgba(28, 30, 29, 1) 0%, rgba(33, 62, 57, 1) 100%);
  overflow: hidden;
}

.shopTitle {
  display: flex;
  margin-top: 89rpx;
  justify-content: center;
  align-items: center;
}

.smallSpot {
  margin-right: 20rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 14rpx;
  background: rgba(41, 204, 65, 1);
  box-shadow: 0px 2px 3px 0px rgba(109, 136, 236, 0.5);
}

.shopName {
  font-size: 32rpx;
  color: #fff;
  font-weight: 400;
  letter-spacing: 12rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.shopDesWrap {
  display: flex;
  justify-content: center;
  margin-top: 82rpx;
}

.shopDes {
  width: 672rpx;
  height: 556rpx;
  font-size: 26rpx;
  font-weight: normal;
  color: #fff;
  line-height: 50rpx;
  font-family: STSongti-SC-Light;
}

.product {
  padding-bottom: 20rpx;
  color: #fff;
  background: #303030;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.productTitle {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 400;
}

.productTitlebar > image {
  width: 250rpx;
  height: 13rpx;
}

/* proItem */

.productItem {
  margin-top: 74rpx;
}

.productItem > .pritm-img {
  display: flex;
  align-items: center;
  width: 670rpx;
  height: 460rpx;
  overflow: hidden;
}

.productItem> .productTip {
  font-size: 40rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  line-height: 66rpx;
  width: 670rpx;
  margin-top:40rpx;
}

.productItem > .Price {
  font-size: 32rpx;
  color: #777;
  font-weight: 400;
  margin-top: 28rpx;
  margin-bottom: 58rpx;
}

.productItem > .Price > .line {
  display: inline-block;
  margin-left: 21rpx;
  margin-right: 26rpx;
}

.productItem>.buybtn {
  width: 290rpx;
  height: 103rpx;
  text-align: center;
  font-weight: 500;
  font-size: 34rpx;
  color: #c09e57;
  line-height: 103rpx;
  border: 1rpx solid #c09e57;
  border-radius: 17rpx;
}

.productItem>.buybtn:active {
  opacity: .8
}

.noproduct {
  color: #aaa;
  padding-top: 60rpx;
}
